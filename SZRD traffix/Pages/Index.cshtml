@page
@model IndexModel
@{
    ViewData["Title"] = "Strona Główna";
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    
    <style>
            /* --- STYLE Z TWOJEGO KODU --- */
            :root {
                --szrd-orange: #e67e22;
                --szrd-darker: #1a1a1a;
                --szrd-dark-gray: #2c3e50;
                --text-light: #ecf0f1;
            }

            body {
                background-color: #121212;
                color: var(--text-light);
                overflow: hidden;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            header {
                position: fixed;
                width: 100%;
                z-index: 1000;
            }

            .pushToEnd {
                width: 100%;
            }

            .loginAction {
                margin-left: 10px;
                text-wrap: nowrap;
            }

            body > .container {
                padding-top: 75px;
            }

            .top-bar {
                background-color: var(--szrd-darker, #1a1a1a);
                padding: 15px 30px;
                display: flex;
                justify-content: space-between;
                align-items: center;
                border-bottom: 3px solid var(--szrd-orange, #e67e22);
                box-shadow: 0 4px 6px rgba(0,0,0,0.3);
                color: var(--text-light, #ecf0f1);
            }

            .logo-link {
                text-decoration: none;
                color: inherit;
            }

            .logo h2 {
                margin: 0;
                font-size: 24px;
                letter-spacing: 1px;
                font-weight: 700;
                color: var(--text-light, #ecf0f1);
            }

            .logo span {
                color: var(--szrd-orange, #e67e22);
            }

            .btn-log {
                background: transparent;
                border: 1px solid var(--szrd-orange, #e67e22);
                color: var(--szrd-orange, #e67e22);
                padding: 6px 16px;
                border-radius: 4px;
                text-decoration: none;
                transition: all 0.3s ease;
                font-size: 0.85rem;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: 8px;
            }

                .btn-log:hover {
                    background-color: var(--szrd-orange, #e67e22);
                    color: white;
                    cursor: pointer;
                    box-shadow: 0 0 10px rgba(230, 126, 34, 0.4);
                }

            header h2 {
                padding-right: 10px;
            }

            .nav-option {
                display: flex;
                align-items: center;
                padding-left: 10px;
                text-wrap: nowrap;
            }

            .nav-link {
                color: var(--text-light) !important;
                transition: color 0.3s;
            }
        
                .nav-link:hover {
                    color: var(--szrd-orange) !important;
                }

            /* --- NOWE STYLE DLA STRONY WELCOME --- */
        
            .hero-section {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                text-align: center;
                min-height: 80vh; /* Wypełnia większość ekranu */
                position: relative;
            }

            /* Abstrakcyjne tło symulujące światła/ruch bez konkretnych zdjęć */
            .hero-background {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 60vw;
                height: 60vw;
                background: radial-gradient(circle, rgba(230, 126, 34, 0.15) 0%, rgba(26, 26, 26, 0) 70%);
                z-index: -1;
                pointer-events: none;
            }

            .hero-title {
                font-size: 3.5rem;
                font-weight: 800;
                margin-bottom: 1rem;
                letter-spacing: -1px;
            }

            .hero-subtitle {
                font-size: 1.25rem;
                color: #bdc3c7;
                margin-bottom: 2.5rem;
                max-width: 600px;
                line-height: 1.6;
            }

            /* Powiększona wersja przycisku z nawigacji */
            .btn-hero {
                padding: 12px 32px;
                font-size: 1.1rem;
                border-width: 2px;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

            .status-badge {
                display: inline-block;
                padding: 5px 12px;
                background-color: rgba(230, 126, 34, 0.1);
                border: 1px solid rgba(230, 126, 34, 0.3);
                border-radius: 20px;
                color: var(--szrd-orange);
                font-size: 0.8rem;
                margin-bottom: 20px;
                font-weight: 600;
            }

            .divider {
                width: 80px;
                height: 4px;
                background-color: var(--szrd-orange);
                margin: 0 auto 30px auto;
                border-radius: 2px;
            }

    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            
            <div class="hero-section">
                <div class="hero-background"></div>
                
                <div class="status-badge">SYSTEM ZARZĄDZANIA RUCHEM DROGOWYM</div>
                
                <h1 class="hero-title">
                    Witaj w <span style="color: var(--szrd-orange);">SZRD</span> traffix
                </h1>
                
                <div class="divider"></div>
                
                <p class="hero-subtitle">
                    Zintegrowana platforma dla administratorów i operatorów.
                    Zaloguj się, aby uzyskać dostęp do panelu monitorowania w czasie rzeczywistym oraz narzędzi konfiguracyjnych.
                </p>

                <div class="d-flex gap-3">
                    <a asp-page="/Login" class="btn-log btn-hero">
                        Rozpocznij pracę
                    </a>
                </div>
            </div>

        </main>
    </div>
</body>
</html>
