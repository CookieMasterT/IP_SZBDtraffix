@page
@model ReportFaultModel
@{
    ViewData["Title"] = "Zgłoś Usterkę";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --szrd-orange: #e67e22;
        --szrd-danger: #e74c3c;
        --szrd-dark: #2c3e50;
    }

    body {
        background-color: var(--szrd-dark);
        color: white;
        font-family: 'Segoe UI', sans-serif;
    }

    .fault-container {
        padding: 40px;
        max-width: 700px;
        margin: 0 auto;
    }

    .fault-card {
        background: #34495e;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.4);
        border-left: 8px solid var(--szrd-danger);
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #ecf0f1;
        }

    .form-input {
        width: 100%;
        padding: 12px;
        border-radius: 4px;
        border: 1px solid #2c3e50;
        background: #1a1a1a;
        color: white;
        font-size: 1rem;
        box-sizing: border-box;
    }

        .form-input:focus {
            border-color: var(--szrd-orange);
            outline: none;
        }

    /* Styl dla checkboxa i zgody */
    .consent-wrapper {
        background: rgba(231, 76, 60, 0.1);
        padding: 15px;
        border: 1px dashed var(--szrd-danger);
        border-radius: 4px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

    .consent-text {
        font-size: 0.9rem;
        color: #fab1a0;
        line-height: 1.4;
    }

    .btn-submit {
        background: var(--szrd-danger);
        color: white;
        border: none;
        padding: 15px 30px;
        border-radius: 4px;
        font-weight: bold;
        font-size: 1rem;
        cursor: pointer;
        width: 100%;
        transition: 0.3s;
        text-transform: uppercase;
    }

        .btn-submit:hover {
            background: #c0392b;
            transform: translateY(-2px);
        }

    .error-msg {
        color: var(--szrd-danger);
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    .success-alert {
        background: #27ae60;
        color: white;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        text-align: center;
    }
</style>
<div class="fault-container">
    <div class="page-header" style="margin-bottom: 30px;">
        <h1 style="margin:0;"><i class="fas fa-exclamation-triangle" style="color: var(--szrd-danger);"></i> System Zgłaszania Awarii</h1>
        <p style="color: #bdc3c7;">Użyj tego formularza, aby poinformować o usterce technicznej urządzenia drogowego.</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="success-alert">
            <i class="fas fa-check-circle"></i> @Model.SuccessMessage
            <br />
            <a href="/Dashboard" style="color: white; font-size: 0.8rem; text-decoration: underline;">Wróć do Panelu Głównego</a>
        </div>
    }

    <div class="fault-card">
        <form method="post">
            <div class="form-group">
                <label>Numer Identyfikacyjny Urządzenia</label>
                <input asp-for="RegistrationNumber" class="form-input" placeholder="np. GD-123456" />
                <span asp-validation-for="RegistrationNumber" class="error-msg"></span>
            </div>

            <div class="form-group">
                <label>Opis Usterki</label>
                <textarea asp-for="Content" class="form-input" rows="5" placeholder="Opisz dokładnie co się stało..."></textarea>
                <span asp-validation-for="Content" class="error-msg"></span>
            </div>

            <div class="form-group">
                <div class="consent-wrapper">
                    <input asp-for="Consent" type="checkbox" style="margin-top: 4px; cursor: pointer;" />
                    <label asp-for="Consent" class="consent-text">
                        Rozumiem, że nadużywanie systemu grozi karą grzywny.
                    </label>
                </div>
                <span asp-validation-for="Consent" class="error-msg"></span>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-paper-plane"></i> Wyślij Zgłoszenie
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}