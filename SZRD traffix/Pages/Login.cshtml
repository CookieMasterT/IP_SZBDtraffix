@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<style>
    body {
        background: linear-gradient(135deg, #121212 0%, #2d3436 100%); /* Ciemny, profesjonalny kolor tła */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow: hidden;
    }

    .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: none;
    }

    .login-card {
        background-color: #ffffff;
        width: 100%;
        max-width: 400px;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.5);
        border-top: 6px solid #e67e22; /* Pomarańczowy pasek - kolor ostrzegawczy/drogowy */
    }

    .brand-logo {
        text-align: center;
        margin-bottom: 30px;
    }

    .brand-logo h1 {
        font-weight: 800;
        color: #333;
        margin: 0;
        font-size: 28px;
        letter-spacing: 1px;
    }

    .brand-logo span {
        color: #e67e22; /* Akcent SZRD */
    }

    .brand-subtitle {
        color: #7f8c8d;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-top: 5px;
        display: block;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        color: #34495e;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 2px solid #ecf0f1;
        border-radius: 4px;
        transition: border-color 0.3s;
        box-sizing: border-box; /* Ważne dla paddingu */
    }

    .form-control:focus {
        border-color: #e67e22;
        outline: none;
    }

    .btn-login {
        width: 100%;
        padding: 14px;
        background-color: #e67e22;
        color: white;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
        text-transform: uppercase;
    }

    .btn-login:hover {
        background-color: #d35400;
    }

    .text-danger {
        color: #c0392b;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <div class="brand-logo">
            <h1>SZRD <span>traffix</span></h1>
            <span class="brand-subtitle">Nadzór Ruchu Drogowego</span>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 15px; text-align:center;"></div>

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Adres Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="nazwa@szrd.pl" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Hasło</label>
                <input asp-for="Input.Password" class="form-control" placeholder="Hasło" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Zaloguj do Systemu</button>
        </form>

        <div style="text-align: center; margin-top: 20px; font-size: 0.8rem; color: #95a5a6;">
            &copy; @DateTime.Now.Year SZRD traffix. Wszelkie prawa zastrzeżone.
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}